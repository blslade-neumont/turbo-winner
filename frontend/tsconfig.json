{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "dist",
        "rootDirs": [
            "src",
            "../engine/src",
            "../game-client/src"
        ],
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "pretty": true,
        "skipLibCheck": true,
        "lib": ["es6", "dom"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*", "public/assets/*"],
            "engine": ["../engine/src"],
            "game-client": ["../game-client/src"]
        },
        "types": [
            "core-js",
            "lodash.clonedeep",
            "node",
            "pluralize"
        ]
    },
    "exclude": [
        "node_modules",
        ".c9",
        "**/deprecated"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
